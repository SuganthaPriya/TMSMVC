<!DOCTYPE html>
<html lang="en">


@model TMSMVC.ViewModel.Users
@{
    ViewBag.Title = "Register";
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin - Start Bootstrap Template</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Styles/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="~/Styles/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/Styles/sb-admin.css" rel="stylesheet" />
</head>



<body class="bg-dark">

    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Register an Account</div>
            <div class="card-body">

                @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <form>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label for="exampleInputName">First name</label>
                                    @*<input class="form-control" id="exampleInputName" type="text" aria-describedby="nameHelp" placeholder="Enter first name">*@
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { required = "required", @class = "form-control", id = "exampleInputName", type = "text", placeholder = "Enter first name" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    <label for="exampleInputLastName">Last name</label>
                                    @*<input class="form-control" id="exampleInputLastName" type="text" aria-describedby="nameHelp" placeholder="Enter last name">*@
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { required = "required", @class = "form-control", id = "exampleInputLastName", type = "text", placeholder = "Enter last name" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="InputUserName">User Name</label>
                            @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">*@
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { required = "required", @class = "form-control", id = "InputUserName", placeholder = "Enter UserName" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">*@
                            @Html.EditorFor(model => model.emailID, new { htmlAttributes = new { required = "required", @class = "form-control", id = "exampleInputEmail1", placeholder = "Enter Email" } })
                            @Html.ValidationMessageFor(model => model.emailID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label for="exampleInputPassword1">Password</label>
                                    @*<input class="form-control" id="exampleInputPassword1" type="password" placeholder="Password">*@
                                    @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { required = "required", @class = "form-control", id = "exampleInputPassword1", placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-primary btn-block" onclick="return Validate()" />
                        </div>

                    </form>

                    <div class="text-center">
                        <a class="d-block small mt-3" href="login.html">Login Page</a>
                        <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                }

            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Styles/jquery.min.js"></script>
    <script src="~/Styles/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Styles/jquery.easing.min.js"></script>
</body>
</html>
